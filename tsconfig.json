{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "lib": ["es2017"],
    "target": "es2017",
    "alwaysStrict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*" : ["./node_modules/@types/*", "*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}